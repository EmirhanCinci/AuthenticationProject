<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/logo.png">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/utils.css" rel="stylesheet" />
    <link href="~/css/authentication-layout.css" rel="stylesheet" />

    @RenderSection("customStyles", false)

    <title>Authentication | @ViewBag.Title</title>
</head>
<body class="w-100 height-100vh">

    <!-- alert-container start -->
    <div id="alert-container" class="position-fixed top-0 end-0 p-3" style="z-index: 99999;">

    </div>
    <!-- alert-container end -->

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/js/scripts/authentication.js"></script>

    @RenderSection("customScripts", false)
</body>
</html>